<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if resource.errors.full_messages.any? %>
    <blockquote><%= resource.errors.full_messages.join(", ").humanize %>.</blockquote>
  <% end %>

  <div class="field">
    <%= f.text_field :first_name, autofocus: true, placeholder: "First name" %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, placeholder: "Last name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: "Email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
